/* pages/01-wxml-dataBind/01-wxml-dataBind.wxss */
.courseItem {
  height: 100px;
  border-bottom: 5px solid red;
  display: flex;
}
.courseItem.star {
  border-bottom-color: gold;
}

.courseItem .fm {
  width: 140px;
  height: 80px;
  background-color: orange;
  margin: 10px;
  margin-right: 0;
}
.courseItem .fm image {
  width: 100%;
  height: 100%;
}

.courseItem .desc {
  flex: 1;
  /* background-color: cyan; */
  padding: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.courseItem .desc text {
  font-size: 13px;
  /* display: block; */
}
.courseItem .desc .isStar {
  color: tomato;
  font-weight: bold;
}

.courseItem .desc .courseTitle {
  font-size: 14px;
  font-weight: bold;
}
.courseItem .desc .courseTeacher {
  color: gray;
  /* margin: 10px 0; */
}

.courseItem .desc .courseStudyCount {
  color: red;
}